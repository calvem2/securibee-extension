{
  "manifest_version": 2,
  "name": "securi-bee",
  "description": "the buzz about web security",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "128": "securi-bee_bee.png"
  },

  "permissions": [
    "tabs"
  ],

  "browser_action": {
    "default_popup": "info-tracker.html"
  }
}
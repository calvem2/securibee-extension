{
  "manifest_version": 2,
  "name": "securi-bee",
  "description": "the buzz about web security",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "128": "logo.png"
  },

  "optional_permissions": [
    "tabs", "https://*/"
  ],

  "browser_action": {
    "default_popup": "password-checker.html"
  }
}